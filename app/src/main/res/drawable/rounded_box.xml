<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="@color/grey" />

    <!-- Rounded corners -->
    <corners android:radius="12dp" />

    <!-- Border (stroke) -->
    <stroke
        android:width="0dp"
        android:color="#E91E63" />

    <!-- Inner padding -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />

</shape>
