<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".CommunityFragment"> <!-- Ensure this matches your fragment's package -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:clipToPadding="false"> <!-- Allows card shadows to draw correctly -->

        <!-- Dummy Post Item 1 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/postCard1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/white">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/ivUserProfile1"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/ic_person"
                    app:shapeAppearanceOverlay="@style/CircleImageView"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/tvUsername1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="CoolCatUser"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toEndOf="@id/ivUserProfile1"
                    app:layout_constraintTop_toTopOf="@id/ivUserProfile1"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/tvPostTime1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="Just now"
                    android:textSize="12sp"
                    app:layout_constraintStart_toEndOf="@id/ivUserProfile1"
                    app:layout_constraintTop_toBottomOf="@id/tvUsername1"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/tvPostContent1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Just adopted this little furball! Any name suggestions? So excited to be a cat parent. #newcat #rescuecat"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:lineSpacingMultiplier="1.1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ivUserProfile1" />

                <ImageView
                    android:id="@+id/ivLikeIcon1"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/ic_favorite"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvPostContent1" />

                <TextView
                    android:id="@+id/tvLikeCount1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="12"
                    android:textSize="14sp"
                    android:textColor="@color/black_grey"
                    app:layout_constraintStart_toEndOf="@id/ivLikeIcon1"
                    app:layout_constraintBottom_toBottomOf="@id/ivLikeIcon1"
                    app:layout_constraintTop_toTopOf="@id/ivLikeIcon1" />

                <ImageView
                    android:id="@+id/ivCommentIcon1"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="24dp"
                    android:src="@drawable/ic_comment"
                    app:layout_constraintStart_toEndOf="@id/tvLikeCount1"
                    app:layout_constraintTop_toTopOf="@id/ivLikeIcon1" />

                <TextView
                    android:id="@+id/tvCommentCount1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="5"
                    android:textSize="14sp"
                    android:textColor="@color/black_grey"
                    app:layout_constraintStart_toEndOf="@id/ivCommentIcon1"
                    app:layout_constraintBottom_toBottomOf="@id/ivCommentIcon1"
                    app:layout_constraintTop_toTopOf="@id/ivCommentIcon1" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <!-- Dummy Post Item 2 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/postCard2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/white">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/ivUserProfile2"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/ic_person"
                    app:shapeAppearanceOverlay="@style/CircleImageView"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/tvUsername2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="AnimalLover24"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toEndOf="@id/ivUserProfile2"
                    app:layout_constraintTop_toTopOf="@id/ivUserProfile2"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/tvPostTime2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="1 hour ago"
                    android:textSize="12sp"
                    app:layout_constraintStart_toEndOf="@id/ivUserProfile2"
                    app:layout_constraintTop_toBottomOf="@id/tvUsername2"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/tvPostContent2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="My cat just learned a new trick! So proud. Check out my profile for the video later! Lorem ipsum dolor sit amet, consectetur adipiscing elit."
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:lineSpacingMultiplier="1.1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ivUserProfile2" />

                <ImageView
                    android:id="@+id/ivLikeIcon2"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/ic_favorite"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvPostContent2" />

                <TextView
                    android:id="@+id/tvLikeCount2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="42"
                    android:textSize="14sp"
                    android:textColor="@color/black_grey"
                    app:layout_constraintStart_toEndOf="@id/ivLikeIcon2"
                    app:layout_constraintBottom_toBottomOf="@id/ivLikeIcon2"
                    app:layout_constraintTop_toTopOf="@id/ivLikeIcon2" />

                <ImageView
                    android:id="@+id/ivCommentIcon2"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="24dp"
                    android:src="@drawable/ic_comment"
                    app:layout_constraintStart_toEndOf="@id/tvLikeCount2"
                    app:layout_constraintTop_toTopOf="@id/ivLikeIcon2" />

                <TextView
                    android:id="@+id/tvCommentCount2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="11"
                    android:textSize="14sp"
                    android:textColor="@color/black_grey"
                    app:layout_constraintStart_toEndOf="@id/ivCommentIcon2"
                    app:layout_constraintBottom_toBottomOf="@id/ivCommentIcon2"
                    app:layout_constraintTop_toTopOf="@id/ivCommentIcon2" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
