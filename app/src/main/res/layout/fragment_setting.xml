<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground"
    tools:context=".SettingFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- General Settings Header -->
        <TextView
            android:id="@+id/header_general"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="General"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:textColor="?attr/colorPrimary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Notifications Setting -->
        <ImageView
            android:id="@+id/icon_notifications"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/ic_notifications"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/header_general"
            app:tint="?attr/colorOnSurface" />

        <TextView
            android:id="@+id/label_notifications"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Notifications"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            app:layout_constraintBottom_toBottomOf="@id/icon_notifications"
            app:layout_constraintStart_toEndOf="@id/icon_notifications"
            app:layout_constraintTop_toTopOf="@id/icon_notifications"
            app:layout_constraintEnd_toStartOf="@id/switch_notifications"/>

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switch_notifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/label_notifications"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/label_notifications" />

        <!-- Data Saver Setting -->
        <ImageView
            android:id="@+id/icon_data_saver"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/ic_data_saver"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/icon_notifications"
            app:tint="?attr/colorOnSurface" />

        <TextView
            android:id="@+id/label_data_saver"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Data Saver"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            app:layout_constraintBottom_toBottomOf="@id/icon_data_saver"
            app:layout_constraintStart_toEndOf="@id/icon_data_saver"
            app:layout_constraintTop_toTopOf="@id/icon_data_saver"
            app:layout_constraintEnd_toStartOf="@id/switch_data_saver"/>

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switch_data_saver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/label_data_saver"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/label_data_saver" />

        <!-- Appearance Header -->
        <TextView
            android:id="@+id/header_appearance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Appearance"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:textColor="?attr/colorPrimary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/icon_data_saver" />

        <!-- Dark Mode Setting -->
        <ImageView
            android:id="@+id/icon_dark_mode"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/ic_dark_mode"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/header_appearance"
            app:tint="?attr/colorOnSurface" />

        <TextView
            android:id="@+id/label_dark_mode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Dark Mode"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            app:layout_constraintBottom_toBottomOf="@id/icon_dark_mode"
            app:layout_constraintStart_toEndOf="@id/icon_dark_mode"
            app:layout_constraintTop_toTopOf="@id/icon_dark_mode" />

        <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/toggle_dark_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/label_dark_mode"
            app:layout_constraintBottom_toBottomOf="@id/label_dark_mode"
            app:singleSelection="true"
            app:selectionRequired="true">
            <Button
                android:id="@+id/button_light_mode"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Light" />
            <Button
                android:id="@+id/button_dark_mode"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dark" />
            <Button
                android:id="@+id/button_system_mode"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="System" />
        </com.google.android.material.button.MaterialButtonToggleGroup>

        <!-- More Header -->
        <TextView
            android:id="@+id/header_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="More"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:textColor="?attr/colorPrimary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toggle_dark_mode" />

        <!-- Language Setting -->
        <ImageView
            android:id="@+id/icon_language"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/ic_language"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/header_more"
            app:tint="?attr/colorOnSurface" />

        <TextView
            android:id="@+id/label_language"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Language"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            app:layout_constraintBottom_toBottomOf="@id/icon_language"
            app:layout_constraintStart_toEndOf="@id/icon_language"
            app:layout_constraintTop_toTopOf="@id/icon_language" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_chevron_right"
            app:layout_constraintBottom_toBottomOf="@id/label_language"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/label_language"
            app:tint="?attr/colorOnSurface" />

        <!-- Help & Support Setting -->
        <ImageView
            android:id="@+id/icon_help"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/ic_help"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/icon_language"
            app:tint="?attr/colorOnSurface" />

        <TextView
            android:id="@+id/label_help"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Help &amp; Support"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            app:layout_constraintBottom_toBottomOf="@id/icon_help"
            app:layout_constraintStart_toEndOf="@id/icon_help"
            app:layout_constraintTop_toTopOf="@id/icon_help" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_chevron_right"
            app:layout_constraintBottom_toBottomOf="@id/label_help"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/label_help"
            app:tint="?attr/colorOnSurface" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
